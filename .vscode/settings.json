{
  "cSpell.words": [
    "changefreq",
    "easyops",
    "flowbite",
    "httpsnippet",
    "noreply",
    "peaceiris",
    "savechart",
    "sharechart"
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "[markdown]": {
    "editor.wordWrap": "off",
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/deploy.yml"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass"
  ],
  "tailwindCSS.experimental.classRegex": [
    "classed\\(.+\\)`(.*)`",
    "classed\\.\\w+`(.*)`"
  ]
}
